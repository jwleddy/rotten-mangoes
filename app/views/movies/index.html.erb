<h1>Rotten Mangoes</h1>
<%= link_to "Submit a movie!", new_movie_path %>
<hr>
<%= form_tag '/movies', method: :get do %>
  <div>
  <%= label_tag(:term, "Search term:") %>
  <%= text_field_tag(:term) %>
</div>
<div>
  <%= label_tag(:duration, "Duration:") %>
  <%= select_tag(:duration, options_for_select([['Under 90',1],['Between 90 and 120',2],['Over 120',3]]),include_blank: true) %>
</div>
  <%= submit_tag "Search" %>
<% end %>

<% @movies.each do |movie| %>
  <%= link_to image_tag(movie.poster_image_url), movie_path(movie) %>
  <h2><%= link_to movie.title, movie_path(movie) %></h2>
  <h2>Average Rating: <%= movie.review_average %>/10</h2>
  <h3><%= formatted_date(movie.release_date) %></h3>
  <h4>Dir. <%= movie.director %> | <%= movie.runtime_in_minutes %> minutes</h4>
  <p><%= movie.description %></p>
  <hr>
<% end %>
